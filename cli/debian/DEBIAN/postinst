#!/bin/bash
set -e

# Create backup directory
mkdir -p /var/lib/a14-charge-keeper

# Set proper permissions
chmod 755 /usr/local/bin/a14-charge-keeper
chmod 755 /usr/local/bin/check-support

# Create lock directory if it doesn't exist
mkdir -p /var/lock

echo "a14-charge-keeper has been installed successfully!"
echo ""
echo "Quick start:"
echo "  1. Check hardware support: check-support"
echo "  2. Set battery limit: sudo a14-charge-keeper set 80"
echo "  3. Make permanent: sudo a14-charge-keeper persist 80"
echo ""
echo "For help: a14-charge-keeper --help"

#DEBHELPER#